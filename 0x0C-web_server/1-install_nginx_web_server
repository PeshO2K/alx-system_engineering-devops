#!/usr/bin/env bash
# script to install ngnix and return page with "Hello world" when queried using curl in rrot
# Update the package lists for upgrades and new package installations
# apt-get update -y

# # Install nginx
# apt-get install nginx -y

# # Remove the default nginx configuration
# rm /etc/nginx/sites-enabled/default

# # Create a new nginx configuration
# echo "server {
#     listen 80;
#     location / {
#         return 200 'Hello World!';
#         add_header Content-Type text/plain;
#     }
# }" > /etc/nginx/sites-available/web

# # Enable the new configuration
# ln -s /etc/nginx/sites-available/web /etc/nginx/sites-enabled/

# # Restart nginx
# service nginx restart


# Update package list
apt-get update

# Install Nginx
apt-get install -y nginx

# Start Nginx (it usually starts automatically after installation)
service nginx restart

mkdir -p /var/www/html/
echo 'Hello World!' > /var/www/html/index.html
# Configure Nginx to listen on port 80
echo "server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm;

    server_name _;

    location / {
        try_files \$uri \$uri/ =404;
    }
}" > /etc/nginx/sites-available/default
service nginx restart
